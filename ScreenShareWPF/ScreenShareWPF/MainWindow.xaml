<Window x:Class="ScreenShareWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignalR Client" Height="800" Width="800">
    <Grid>
        <!-- Messages Display -->
        <ListBox Name="MessagesList" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="780" Margin="10,10,0,0"/>

        <!-- Shared Screen Display -->
        <Image Name="SharedScreenImage" HorizontalAlignment="Left" VerticalAlignment="Top" Width="800" Height="700" Margin="10,220,0,0" Stretch="Uniform"/>
        
    </Grid>
</Window>